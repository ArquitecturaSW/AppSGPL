<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nombre_documento"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
           android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:text="Presentacion de equipo" />

        <TextView
            android:id="@+id/version_documento"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/nombre_documento"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:text="v1" />

        <TextView
            android:id="@+id/date_documento"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/version_documento"
            android:textColor="@android:color/black"

            android:text="10/11/17" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="24dp"
            android:layout_height="50dp"
            android:background="@drawable/descargar" />
        </RelativeLayout>

    </LinearLayout>
    <View style="@style/Divider"/>
</LinearLayout>