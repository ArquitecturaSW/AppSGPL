<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:id="@+id/dialogo_crear_proyecto"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:id="@+id/a"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/nombre_proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del proyecto"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/a"
            android:id="@+id/spinnerproyecto"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/h"
            android:layout_below="@+id/spinnerproyecto"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/code_proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Codigo del proyecto"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/z"
            android:layout_below="@+id/h"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/monto_proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monto del proyecto"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/b"
            android:layout_below="@+id/z"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fecha_inicio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Fecha Inicio"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_below="@+id/z"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/seleccionar_fecha_i"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/b"
            android:layout_marginTop="8dp"

            android:src="@drawable/calendar"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/c"
            android:layout_below="@+id/b"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fecha_fin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Fecha fin"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/seleccionar_fecha_f"
            android:layout_marginRight="20dp"
            android:src="@drawable/started"
            android:layout_below="@+id/b"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/c" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/d"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seleccionar_fecha_f"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/descripcion_proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n"
                android:inputType="text"
                android:maxLines="3"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/registrar_proyecto"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/d"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:text="Registrar Proyecto"
            android:layout_marginBottom="32dp"
            android:background="@color/colorA"
            android:layout_centerInParent="true"
            />



    </RelativeLayout>
</ScrollView>